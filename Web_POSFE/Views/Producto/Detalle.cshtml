@model Web_POSFE.Models.Producto

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h1>Detalle</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID Proveedor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Idprovee)
        </dd>
        <dt class="col-sm-2">
            Descripcion Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionLarga)
        </dd>

        <dt class="col-sm-2">
            Precio Compra
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PreCompraS)
        </dd>

        <dt class="col-sm-2">
            Stock Actual
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockActual)
        </dd>

        <dt class="col-sm-2">
            Venta al por menor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PreVntaxMenor)
        </dd>
        <dt class="col-sm-2">
            Venta al por mayor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PreVntaxMayor)
        </dd>

        <dt class="col-sm-2">
            Utilidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UtilidadUnit)
        </dd>
        <dt class="col-sm-2">
            Tipo Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoProdcto)
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoPro)
        </dd>
        <dt class="col-sm-2">
            Fecha Creacion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreaProServ)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Editar" asp-route-id="@Model.IdPro">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
